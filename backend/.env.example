# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values
# ⚠️ NEVER commit the .env file to version control!

# JWT Secret - CRITICAL: Use a strong random secret in production
JWT_SECRET=change-this-to-a-long-random-secret-in-production-min-32-chars

# Database Configuration (when you replace mock data with real DB)
# DATABASE_URL=mongodb://localhost:27017/listing-app
# DB_HOST=localhost
# DB_PORT=27017
# DB_NAME=listing_app
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,exp://localhost:19000

# File Upload Settings
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# API Keys (when integrating third-party services)
# SENDGRID_API_KEY=your_sendgrid_key
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# FIREBASE_ADMIN_KEY=your_firebase_admin_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Settings
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=change-this-session-secret-too

# Production Security Headers
# HELMET_CSP_DIRECTIVES=default-src 'self'
# TRUST_PROXY=true